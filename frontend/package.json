{
    "name": "frontend",
    "version": "0.1.0",
    "license": "LGPL-3.0-or-later",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "pretty": "prettier --write ."
    },
    "dependencies": {
        "@fluentui/react-components": "^9.46.4",
        "@fluentui/react-date-time": "^8.7.137",
        "@fluentui/react-datepicker-compat": "^0.4.24",
        "@fluentui/react-icons": "^2.0.227",
        "@monaco-editor/react": "^4.6.0",
        "axios": "^1.6.7",
        "is-utorid": "^1.2.2",
        "monaco-editor": "^0.46.0",
        "next": "^14.1.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-dropzone": "^14.2.3",
        "react-grid-system": "^8.1.9",
        "use-local-storage": "^3.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.11.20",
        "@types/react": "^18.2.58",
        "@types/react-dom": "^18.2.19",
        "@typescript-eslint/eslint-plugin": "^7.0.2",
        "@typescript-eslint/parser": "^7.0.2",
        "codetierlist-types": "../types",
        "eslint": "^8.56.0",
        "eslint-config-next": "^14.1.0",
        "prettier": "^3.2.5",
        "typescript": "^5.2.2"
    },
    "prettier": {
        "arrowParens": "always",
        "endOfLine": "auto",
        "printWidth": 90,
        "singleQuote": true,
        "tabWidth": 4,
        "trailingComma": "es5"
    },
    "eslintConfig": {
        "extends": [
            "eslint:recommended",
            "plugin:@typescript-eslint/recommended",
            "next/core-web-vitals",
            "plugin:react-hooks/recommended",
            "plugin:react/recommended",
            "plugin:react/jsx-runtime"
        ],
        "parser": "@typescript-eslint/parser",
        "plugins": [
            "@typescript-eslint"
        ],
        "rules": {
            "@typescript-eslint/no-unused-vars": [
                "error",
                {
                    "argsIgnorePattern": "^_",
                    "varsIgnorePattern": "^_",
                    "caughtErrorsIgnorePattern": "^_"
                }
            ],
            "no-console": [
                "warn"
            ],
            "no-shadow": "off",
            "@typescript-eslint/no-shadow": [
                "error"
            ],
            "no-use-before-define": "off",
            "@typescript-eslint/no-use-before-define": [
                "error"
            ],
            "react/jsx-filename-extension": [
                "warn",
                {
                    "extensions": [
                        ".tsx"
                    ]
                }
            ]
        },
        "env": {
            "browser": true
        },
        "settings": {
            "react": {
                "pragma": "React",
                "version": "detect"
            }
        }
    }
}
