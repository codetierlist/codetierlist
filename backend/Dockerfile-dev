FROM node
RUN npm install -g typescript nodemon ts-node

# npm install types
WORKDIR /types
COPY ./types/package.json ./types/package-lock.json ./
RUN npm ci
COPY ./types ./
RUN npm run prisma

# npm install backend
WORKDIR /backend
COPY ./backend/package.json ./backend/package-lock.json ./
RUN npm ci
RUN cp -r ../types/prisma .
RUN npm run prisma

COPY ../backend_config.json ./backend_config.json
COPY ./backend ./

CMD ["bash", "dev.sh"]
